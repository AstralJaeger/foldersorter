{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "extends": [
        "plugin:v3xlabs/recommended"
    ],
    "ignorePatterns": [
        "!**/*"
    ],
    "plugins": [
        "v3xlabs"
    ],
    "env": {
        "node": true
    },
    "rules": {
        "quotes": [
            "warn",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "prefer-at": "off",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "unused-imports/no-unused-vars": "off"
    }
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "timezone": "Europe/Vienna",
  "assignees": ["astraljaeger"],
  "branchPrefix": "renovate/",
  "schedule": ["before 12:00 every weekday"],
  "prHourlyLimit": 5,
  "npm": {
    "enabled": true
  },
  "github-actions": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5:00 every weekday"]
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["^eslint(-|_)"],
      "groupName": "eslint and plugins",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^@types/"],
      "groupName": "typescript types",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^husky"],
      "groupName": "husky",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^ts-node"],
      "groupName": "ts-node",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^typescript"],
      "groupName": "typescript",
      "automerge": true
    }
  ]
}

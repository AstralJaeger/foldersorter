{
    "name": "foldersorter",
    "version": "1.0.0",
    "description": "A small tool to sort a folder by document type and run file conversions",
    "main": "index.js",
    "scripts": {
        "prepare": "husky install",
        "precommit": "pnpm run lint:fix && pnpm run pretty",
        "prepush": "pnpm run lint",
        "lint": "eslint -c .eslintrc.json --ext .ts ./src",
        "lint:fix": "eslint -c .eslintrc.json --ext .ts --fix ./src",
        "pretty": "prettier --config .prettierrc --write src/**/*.ts",
        "build": "tsc && pkg out/index.js -t node18-win-x64 --out-path dist/ && mv dist/index.exe app.exe",
        "start": "ts-node ./src/index.ts",
        "dev": "ts-node-dev --quiet ./src/index.ts"
    },
    "keywords": [],
    "author": "AstralJaeger <astraljaeger@pm.me>",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "18.16.0",
        "eslint": "8.38.0",
        "eslint-config-standard": "17.0.0",
        "eslint-plugin-import": "2.27.5",
        "eslint-plugin-n": "15.7.0",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-promise": "6.1.1",
        "eslint-plugin-unicorn": "46.0.0",
        "eslint-plugin-v3xlabs": "1.6.0",
        "@typescript-eslint/eslint-plugin": "^5.58.0",
        "@typescript-eslint/parser": "^5.58.0",
        "husky": "8.0.3",
        "pkg": "5.8.1",
        "ts-node": "10.9.1",
        "ts-node-dev": "2.0.0",
        "typescript": "5.0.4"
    },
    "dependencies": {
        "@lvksh/logger": "1.6.4",
        "chalk": "^5.2.0",
        "chokidar": "3.5.3",
        "dotenv": "16.0.3",
        "fs-extra": "11.1.1"
    },
    "engines": {
        "pnpm": ">=8",
        "npm": ">=8",
        "node": ">=18"
    },
    "cpu": [
        "x64"
    ]
}

{
  "extends": ["config:base"],
  "pnpm": {
    "enabled": true
  },
  "dockerfile": {
    "enabled": true
  },
  "github-actions": {
    "enabled": true
  },
  "timezone": "Europe/Vienna",
  "schedule": "before 5pm every weekday",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": "before 5pm every weekday"
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["^eslint(-|_)"],
      "groupName": "eslint and plugins",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^@types/"],
      "groupName": "typescript types",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^husky"],
      "groupName": "husky",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^ts-node"],
      "groupName": "ts-node",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^typescript"],
      "groupName": "typescript",
      "automerge": true
    }
  ]
}
